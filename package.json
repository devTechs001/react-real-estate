{
  "name": "real-estate-app",
  "version": "1.0.0",
  "description": "A comprehensive real estate platform built with MERN stack",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm run server\" \"pnpm run client\"",
    "client": "cd client && pnpm run dev",
    "server": "cd server && pnpm run dev",
    "build": "cd client && pnpm run build",
    "build:server": "cd server && pnpm run build",
    "start": "cd server && pnpm start",
    "install:all": "pnpm install && cd client && pnpm install && cd ../server && pnpm install",
    "clean": "rm -rf node_modules client/node_modules server/node_modules",
    "clean:install": "pnpm run clean && pnpm run install:all",
    "type-check": "cd client && pnpm run type-check"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "packageManager": "pnpm@8.6.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}